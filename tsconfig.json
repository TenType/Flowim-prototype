{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmitOnError": true,
		// "watch": true,
		// "strict": true,
		"noImplicitAny": true,
		// "strictNullChecks": true,
		"resolveJsonModule": true,
		"removeComments": true,
		// "preserveConstEnums": true,
	},
	"compileOnSave": true,
	"include": ["src", "environment.d.ts"],
	"exclude": ["node_modules"]
}